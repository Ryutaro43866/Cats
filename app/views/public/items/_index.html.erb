<div class="d-md-flex justify-content-start flex-wrap">
  <% items.each do |item| %>
    <%= link_to item_path(item), class: 'text-decoration-none' do %>
      <div class="m-3 p-3 rounded text-dark shadow item-index">
        <div class="mb-3 d-flex justify-content-center">
          <%= image_tag item.image, class: 'item-index-img' %>
        </div>
        <p><%= item.title %></p>
        <p>いいね：<%= item.favorites.count %></p>
        <p><%= item.created_at.strftime('%Y/%m/%d') %></p>
      </div>
    <% end %>
  <% end %>
</div>

<div class="row">
  <div class="col-12 d-flex justify-content-center">
    <%= paginate items, theme: 'bootstrap-5' %>
  </div>
</div>